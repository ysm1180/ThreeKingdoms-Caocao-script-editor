{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "es6",
    "sourceMap": true,
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "outDir": "../dist",
    "noUnusedLocals": false,
    "typeRoots": ["typings"],
    "paths": {
      // baseUrl 옵션을 기준디렉토리로 불러올 모듈의 위치 설정이 가능
      "*": ["*"]
    }
  }
}
